        .activity-icon {
            width: 40px;
            height: 40px;
            background: #3498db;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-right: 15px;
            flex-shrink: 0;
        }

        .activity-icon i {
            color: white;
            font-size: 16px;
        }

        .activity-content {
            flex: 1;
        }

        .activity-content p {
            margin: 0 0 5px 0;
            color: #2c3e50;
            font-size: 14px;
        }

        .activity-time {
            color: #7f8c8d;
            font-size: 12px;
        }

        /* 상태 배지 스타일 */
        .status-badge {
            display: inline-block;
            padding: 2px 8px;
