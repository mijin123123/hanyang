        }

        .status-rejected {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #e74c3c;
        }

        /* 관리자 정보 스타일 */
        .admin-info {
            color: #2c3e50;
            font-weight: 500;
            margin-right: 15px;
            padding: 8px 12px;
            background: rgba(52, 152, 219, 0.1);
            border-radius: 5px;
            border: 1px solid rgba(52, 152, 219, 0.2);
        }

        .current-time {
            color: #7f8c8d;
            font-size: 14px;
            padding: 8px 12px;
            background: #f8f9fa;
            border-radius: 5px;
            border: 1px solid #e9ecef;
        }
    </style>
</body>
</html>
