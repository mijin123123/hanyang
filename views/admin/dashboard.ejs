                </div>
                <div class="stat-card">
                    <div class="stat-icon">
                        <i class="fas fa-university"></i>
                    </div>
                    <div class="stat-info">
                        <h3>등록된 계좌</h3>
                        <p class="stat-number">0</p>
                    </div>
                </div>
            </div>

            <!-- 최근 활동 -->
            <div class="recent-activities">
                <div class="activity-section">
                    <h3><i class="fas fa-clock"></i> 최근 회원 가입</h3>
                    <div class="activity-list">
                        <div class="activity-item" style="text-align: center; color: #666; padding: 20px;">
                            <span>최근 가입한 회원이 없습니다.</span>
                        </div>
                    </div>
                </div>

                <div class="activity-section">
                    <h3><i class="fas fa-money-bill-wave"></i> 최근 투자</h3>
                    <div class="activity-list">
                        <div class="activity-item" style="text-align: center; color: #666; padding: 20px;">
                            <span>최근 투자 내역이 없습니다.</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- 빠른 액션 -->
            <div class="quick-actions">
                <h3><i class="fas fa-bolt"></i> 빠른 액션</h3>
                <div class="action-buttons">
                    <button class="action-btn" onclick="location.href='/admin/popup-manager'">
                        <i class="fas fa-plus"></i>
                        새 팝업 추가
                    </button>
                    <button class="action-btn" onclick="location.href='/admin/notice-manager'">
                        <i class="fas fa-edit"></i>
                        공지사항 작성
                    </button>
                    <button class="action-btn" onclick="location.href='/admin/inquiry-manager'">
                        <i class="fas fa-reply"></i>
                        문의 답변하기
                    </button>
                    <button class="action-btn" onclick="location.href='/admin/account-manager'">
                        <i class="fas fa-university"></i>
                        계좌 관리
                    </button>
                    <button class="action-btn" onclick="exportData()">
                        <i class="fas fa-download"></i>
                        데이터 내보내기
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="/admin/js/admin.js"></script>
    <script src="/js/auth.js"></script>
    <%- include('../partials/admin-scripts') %>
    <script>
        
        // 실제 데이터 - 김민정 계정은 2개 상품 가입
        const members = [
            {
                id: 1,
                name: "김민정",
                username: "minj0010",
                email: "minj0010@example.com",
                phone: "010-1234-5678",
                role: "admin",
                status: "active",
                joinDate: "2025-01-15",
                investmentAmount: 70000000,
                bankName: "국민은행",
                accountNumber: "123-456-789",
                address: "서울시 강남구",
                detailAddress: "역삼동 123-45"
            }
        ];

        const investments = [
            {
                id: 1,
                investor: "김민정",
                product: "[300KW] 다함께 동행 뉴베이직",
                amount: 5000000,
                applicationDate: "2025-01-15",
                status: "approved"
            },
            {
                id: 2,
                investor: "김민정",
                product: "[1MW] 다함께 동행 메가",
                amount: 65000000,
                applicationDate: "2025-01-20",
                status: "approved"
            }
        ];

        const inquiries = [];
        
        const notices = [
            {
                id: 1,
                title: "한양에너지 투자 상품 안내",
                status: "active",
                createdAt: "2025-01-10"
            },
            {
                id: 2,
                title: "2025년 상반기 투자 설명회 안내", 
                status: "active",
                createdAt: "2025-01-05"
            }
        ];

        const accounts = [
            {
                id: 1,
                bankName: "국민은행",
                accountNumber: "123-456-789",
                accountHolder: "한양에너지협동조합",
                purpose: "투자금 입금 계좌",
                status: "active"
            },
            {
                id: 2,
                bankName: "신한은행", 
                accountNumber: "987-654-321",
                accountHolder: "한양에너지협동조합",
                purpose: "수익금 지급 계좌",
                status: "active"
            }
        ];

        // 대시보드 통계 로드
        async function loadDashboardStats() {
            try {
                console.log('📊 대시보드 통계 로드 시작');
                
                const response = await fetch('/api/admin/dashboard-stats', {
                    method: 'GET',
                    credentials: 'include'
                });
                
                const result = await response.json();
                console.log('📊 대시보드 응답:', result);
                
                if (result.success) {
                    const stats = result.stats;
                    
                    // 총 회원수 (활성 회원수 표시)
                    document.querySelector('.stat-card:nth-child(1) .stat-number').textContent = `${stats.activeMembers}명`;
                    
                    // 총 투자금액 (승인된 투자만)
                    document.querySelector('.stat-card:nth-child(2) .stat-number').textContent = 
                        `${stats.totalInvestmentAmount.toLocaleString()}원`;
                    
                    // 미처리 문의 → 대기중 투자로 변경
                    document.querySelector('.stat-card:nth-child(3) .stat-info h3').textContent = '대기중 투자';
                    document.querySelector('.stat-card:nth-child(3) .stat-number').textContent = `${stats.pendingInvestments}건`;
                    
                    // 활성 공지 → 활성 공지 (임시로 0)
                    document.querySelector('.stat-card:nth-child(4) .stat-number').textContent = '0';
                    
                    // 등록된 계좌 → 고유 투자자 수
                    document.querySelector('.stat-card:nth-child(5) .stat-info h3').textContent = '투자자 수';
                    document.querySelector('.stat-card:nth-child(5) .stat-number').textContent = `${stats.uniqueInvestors}명`;
                    
                    // 최근 투자 활동 업데이트
                    updateRecentInvestments(stats.recentInvestmentList || []);
                    
                    console.log('✅ 대시보드 통계 로드 성공:', {
                        활성회원: stats.activeMembers,
                        총투자금액: stats.totalInvestmentAmount.toLocaleString(),
                        대기중투자: stats.pendingInvestments,
                        투자자수: stats.uniqueInvestors
                    });
                } else {
                    console.error('대시보드 통계 로드 실패:', result.message);
                    showErrorMessage('대시보드 통계를 불러오는데 실패했습니다.');
                }
            } catch (error) {
                console.error('대시보드 통계 로드 중 오류:', error);
                showErrorMessage('서버 연결 오류가 발생했습니다.');
            }
        }

        // 최근 투자 활동 업데이트
        function updateRecentInvestments(recentInvestments) {
            const recentInvestmentsContainer = document.querySelector('.activity-section:nth-child(2) .activity-list');
            
            if (recentInvestments && recentInvestments.length > 0) {
                recentInvestmentsContainer.innerHTML = recentInvestments.map(investment => {
                    const statusText = {
                        'pending': '승인 대기',
                        'approved': '승인 완료',
                        'rejected': '반려됨'
                    }[investment.status] || investment.status;
                    
                    const statusClass = {
                        'pending': 'status-pending',
                        'approved': 'status-approved', 
                        'rejected': 'status-rejected'
                    }[investment.status] || '';
                    
                    return `
                        <div class="activity-item">
                            <div class="activity-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div class="activity-content">
                                <p><strong>${investment.memberName}</strong>님이 투자 신청했습니다.</p>
                                <span class="activity-time">
                                    ${new Date(investment.createdAt).toLocaleDateString('ko-KR')} - 
                                    ${investment.amount.toLocaleString()}원 
                                    <span class="status-badge ${statusClass}">${statusText}</span>
                                </span>
                            </div>
                        </div>
                    `;
                }).join('');
            } else {
                recentInvestmentsContainer.innerHTML = `
                    <div class="activity-item" style="text-align: center; color: #666; padding: 20px;">
                        <span>최근 투자 내역이 없습니다.</span>
                    </div>
                `;
            }
        }

        // 최근 활동 업데이트
        function updateRecentActivities() {
            // 최근 회원 가입은 임시로 비움 (API 추가 필요)
            const recentMembersContainer = document.querySelector('.activity-section:nth-child(1) .activity-list');
            recentMembersContainer.innerHTML = `
                <div class="activity-item" style="text-align: center; color: #666; padding: 20px;">
                    <span>최근 가입한 회원이 없습니다.</span>
                </div>
            `;
        }
        
        function exportData() {
            alert('데이터 내보내기 기능은 준비 중입니다.');
        }
        
        function showErrorMessage(message) {
            // 간단한 에러 메시지 표시
            console.error('❌', message);
        }

        // 페이지 초기화
        document.addEventListener('DOMContentLoaded', function() {
            console.log('📊 대시보드 페이지 로드 완료');
            loadDashboardStats(); // 실제 데이터 로드
            updateRecentActivities();
        });
    </script>

    <style>
        /* 최근 활동 스타일 */
        .activity-item {
            display: flex;
            align-items: flex-start;
            padding: 15px;
            border-bottom: 1px solid #eee;
            transition: background-color 0.2s ease;
        }

        .activity-item:hover {
            background-color: #f8f9fa;
        }

        .activity-item:last-child {
            border-bottom: none;
