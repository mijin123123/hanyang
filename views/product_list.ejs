        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --danger: #f72585;
            --warning: #f8961e;
            --dark: #212529;
            --light: #f8f9fa;
            --gray: #6c757d;
            --white: #ffffff;
            --border-radius: 16px;
            --box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        body {
            font-family: 'Pretendard', sans-serif;
            background-color: #f5f7ff;
            color: var(--dark);
            line-height: 1.6;
            padding: 0;
            margin: 0;
        }

        .investment-section {
            max-width: 1280px;
            margin: 50px auto;
            padding: 40px 20px;
        }

        .section-title {
            font-size: 2rem;
            font-weight: 700;
            color: var(--dark);
            margin-bottom: 2rem;
            position: relative;
            padding-bottom: 1rem;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 60px;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--success));
            border-radius: 2px;
        }

        /* 카드 그리드 및 크기 조정 */
        .investment-card-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 55px;
            padding: 0;
        }

        .investment-card-link {
            text-decoration: none;
            color: inherit;
            display: block;
            height: 100%;
        }

        /* 카드 사이즈 조정 */
        .investment-card {
            position: relative;
            background: var(--white);
            border-radius: var(--border-radius);
            padding: 15px;
            box-shadow: var(--box-shadow);
            display: flex;
            flex-direction: column;
            gap: 0px;
            transition: var(--transition);
            height: 100%;
            border-top: 4px solid var(--primary);
        }

        .investment-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 28px rgba(67, 97, 238, 0.15);
        }

        /* 나머지 스타일은 동일하게 유지 */
        .ribbon {
            position: absolute;
            top: 16px;
            right: -8px;
            background: var(--danger);
            color: var(--white);
            padding: 6px 16px;
            font-size: 13px;
            font-weight: 700;
            border-radius: 4px;
            box-shadow: 0 2px 8px rgba(247, 37, 133, 0.3);
            z-index: 1;
        }

        .ribbon::before {
            content: '';
            position: absolute;
            right: 0;
            bottom: -8px;
            width: 0;
            height: 0;
            border-left: 8px solid transparent;
            border-right: 8px solid var(--danger);
            border-top: 8px solid var(--danger);
            border-bottom: 8px solid transparent;
            transform: rotate(-45deg);
        }

        .badge-container {
            display: flex;
            gap: 8px;
            margin-bottom: 6px;
            flex-wrap: wrap;
        }

        .badge {
            background: var(--primary-light);
            color: var(--primary);
            font-size: 12px;
            padding: 5px 10px;
            border-radius: 50px;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 4px;
        }

        .badge i {
            font-size: 10px;
        }

        .badge.gray {
            background: #f1f3f5;
            color: var(--gray);
        }

        .product-title {
            font-size: 1.1rem;
            font-weight: 700;
            color: var(--dark);
            margin: 6px 0 4px;
            line-height: 1.4;
        }

        .yield {
            font-size: 14px;
            color: var(--dark);
            line-height: 1.6;
        }

        .yield .rate {
            color: var(--primary);
            font-weight: 700;
            font-size: 15px;
        }

        .profit-details {
            background: #f8f9fa;
            padding: 12px;
            border-radius: 10px;
            margin: 10px 0;
        }

        .profit-details p {
            margin: 5px 0;
            font-size: 13px;
            color: var(--dark);
        }

        .profit-details strong {
            color: var(--primary);
        }

        .minimum-amount {
            font-size: 13px;
            color: var(--gray);
            margin: 6px 0;
            font-weight: 500;
        }

        .progress-container {
            margin: 16px 0 8px;
        }

        .progress-info {
            display: flex;
            justify-content: space-between;
            margin-bottom: 6px;
        }

        .progress-label {
            font-size: 12px;
            color: var(--gray);
            font-weight: 500;
        }

        .progress-percent {
            font-weight: 700;
            color: var(--primary);
            font-size: 13px;
        }

        .progress-bar-container {
            height: 6px;
            background: #e9ecef;
            border-radius: 3px;
            overflow: hidden;
        }

        .progress-bar-fill {
            height: 100%;
            background: linear-gradient(90deg, var(--primary), var(--success));
            border-radius: 3px;
            transition: width 0.6s ease;
        }

        .invest-btn {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            background: var(--primary);
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            margin-top: 10px;
            width: 100%;
            gap: 6px;
            font-size: 14px;
        }

        .invest-btn:hover {
            background: var(--secondary);
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(67, 97, 238, 0.3);
        }

        .invest-btn i {
            font-size: 12px;
        }

