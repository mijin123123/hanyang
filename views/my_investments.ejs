    <style>
        :root {
            --primary: #4361ee;
            --danger: #f72585;
            --success: #4cc9f0;
            --dark: #212529;
            --gray: #6c757d;
            --white: #ffffff;
            --primary-light: #eef2ff;
            --border-radius: 12px;
            --box-shadow: 0 8px 24px rgba(0,0,0,0.08);
        }
        body {
            font-family: 'Pretendard', sans-serif;
            background-color: #f5f7ff;
            color: var(--dark);
            margin: 0;
        }

        .container {
            max-width: 1200px;
            margin: 100px auto 40px;
            padding: 0 20px;
        }
        .page-title {
            font-size: 1.8rem;
            text-align: center;
            margin-bottom: 30px;
            position: relative;
            padding-bottom: 15px;
        }
        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            width: 80px;
            height: 4px;
            transform: translateX(-50%);
            background: linear-gradient(to right, var(--primary), var(--danger));
            border-radius: 2px;
        }
        .investment-summary {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
            margin-bottom: 30px;
        }
        .summary-card {
            flex: 1;
            min-width: 200px;
            background: var(--white);
            border-radius: var(--border-radius);
            padding: 20px;
            box-shadow: var(--box-shadow);
            text-align: center;
        }
        .summary-label {
            color: var(--gray);
            margin-bottom: 8px;
        }
        .summary-value {
            font-size: 1.5rem;
            font-weight: bold;
            color: var(--primary);
        }

        /* 필터 및 검색 영역 */
        .filter-section {
            background: var(--white);
            border-radius: var(--border-radius);
            padding: 25px;
            margin-bottom: 30px;
            box-shadow: var(--box-shadow);
        }

        .filter-row {
            display: flex;
            gap: 20px;
            align-items: flex-end;
            flex-wrap: wrap;
        }

        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .filter-group label {
            font-weight: 500;
            color: var(--dark);
            font-size: 0.9rem;
        }

        .filter-select, .filter-input {
            padding: 10px 15px;
            border: 2px solid #e9ecef;
            border-radius: 8px;
            font-size: 0.95rem;
            transition: border-color 0.3s;
            min-width: 150px;
        }

        .filter-select:focus, .filter-input:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
        }

        .filter-btn {
            background: var(--primary);
            color: white;
            border: none;
            padding: 12px 25px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s;
            margin-top: 0px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
            height: 44px;
        }

        .filter-btn:hover {
            background: #3651d4;
            transform: translateY(-2px);
        }

        /* 투자 테이블 */
        .investment-table-container {
            background: var(--white);
            border-radius: var(--border-radius);
            padding: 25px;
            box-shadow: var(--box-shadow);
            overflow-x: auto;
            margin-bottom: 30px;
        }

        .table-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }

        .table-title {
            font-size: 1.3rem;
            font-weight: 600;
            color: var(--dark);
        }

        .export-btn {
            background: var(--success);
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .export-btn:hover {
            background: #2db5db;
            transform: translateY(-2px);
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th {
            background: var(--primary-light);
            padding: 16px 12px;
            border-bottom: 2px solid var(--primary);
            font-weight: 600;
            color: var(--dark);
            text-align: center;
            font-size: 0.95rem;
        }

        td {
            text-align: center;
            padding: 16px 12px;
            border-bottom: 1px solid #eee;
            font-size: 0.9rem;
        }

        tr:hover {
            background-color: #f8f9ff;
        }

        .product-name {
            font-weight: 600;
            color: var(--primary);
            text-align: left;
            max-width: 200px;
        }

        .investment-amount {
            font-weight: 600;
            color: var(--dark);
        }

        .profit-rate {
            color: var(--success);
            font-weight: 600;
        }

        .profit-amount {
            color: var(--primary);
            font-weight: 600;
        }

        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 500;
            display: inline-block;
        }

        .status-active {
            background-color: #d1edff;
            color: #0066cc;
        }

        .status-completed {
            background-color: #d4edda;
            color: #155724;
        }

        .status-pending {
            background-color: #fff3cd;
            color: #856404;
        }

        .time-remaining {
            color: var(--danger);
            font-weight: 500;
            font-size: 0.85rem;
        }

        .countdown-timer {
            font-family: 'Courier New', monospace;
            font-weight: bold;
            color: var(--danger);
        }

        /* 액션 버튼 */
        .action-btn {
            padding: 6px 12px;
            border-radius: 6px;
            border: none;
            cursor: pointer;
            font-size: 0.8rem;
            font-weight: 500;
            transition: all 0.3s;
            margin: 2px;
        }

        .btn-detail {
            background-color: var(--primary-light);
            color: var(--primary);
        }

        .btn-detail:hover {
            background-color: var(--primary);
            color: white;
        }

        .btn-withdraw {
            background-color: #fff2f5;
            color: var(--danger);
        }

        .btn-withdraw:hover {
            background-color: var(--danger);
            color: white;
        }

        /* 통계 차트 영역 */
        .chart-section {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            margin-bottom: 30px;
        }

        .chart-card {
            background: var(--white);
            border-radius: var(--border-radius);
            padding: 25px;
            box-shadow: var(--box-shadow);
        }

        .chart-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 20px;
            color: var(--dark);
        }

        .progress-bar {
            background-color: #e9ecef;
            border-radius: 10px;
            overflow: hidden;
            height: 20px;
            margin: 10px 0;
        }

        .progress-fill {
            height: 100%;
            background: linear-gradient(to right, var(--primary), var(--success));
            border-radius: 10px;
            transition: width 0.3s ease;
        }

        .progress-label {
            display: flex;
            justify-content: space-between;
            font-size: 0.9rem;
            margin-bottom: 5px;
        }

        /* 빈 데이터 상태 */
        .no-data {
            text-align: center;
            padding: 60px 20px;
            color: var(--gray);
        }

        .no-data i {
            font-size: 4rem;
            margin-bottom: 20px;
            color: #dee2e6;
        }

        .no-data h3 {
            margin-bottom: 10px;
            color: var(--gray);
        }

        .no-data p {
            margin-bottom: 30px;
        }

        .no-data .cta-btn {
            background: var(--primary);
            color: white;
            padding: 12px 30px;
            border-radius: 8px;
            text-decoration: none;
            display: inline-block;
            font-weight: 500;
            transition: all 0.3s;
        }

        .no-data .cta-btn:hover {
            background: #3651d4;
            transform: translateY(-2px);
        }

        /* 페이지네이션 */
        .pagination {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 40px;
            gap: 8px;
            flex-wrap: wrap;
        }

        .pagination a, .pagination span {
            padding: 10px 15px;
            border: 1px solid #ddd;
            text-decoration: none;
            border-radius: 8px;
            color: var(--primary);
            font-weight: 500;
            transition: all 0.3s;
            min-width: 44px;
            text-align: center;
        }

        .pagination a:hover {
            background: var(--primary-light);
            border-color: var(--primary);
        }

        .pagination .active {
            background: var(--primary);
            color: white;
            border-color: var(--primary);
        }

        .pagination .disabled {
            color: #999;
            pointer-events: none;
            background: #f8f9fa;
        }

        /* 반응형 디자인 */
        @media (max-width: 1024px) {
