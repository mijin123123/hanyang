<script>
    // 팝업 로드 및 표시 함수
    async function loadAndShowPopups() {
        try {
            const response = await fetch('/api/popups');
            const result = await response.json();
            
            if (result.success && result.data.length > 0) {
                const popupContainer = document.getElementById('popup-container');
                
                result.data.forEach((popup, index) => {
                    // 오늘 하루 보지 않기 체크
                    const doNotShowKey = `popup_${popup.id}_hide`;
                    const hideUntil = localStorage.getItem(doNotShowKey);
                    
                    if (hideUntil) {
                        const hideDate = new Date(hideUntil);
                        const now = new Date();
                        if (now < hideDate) {
                            return; // 팝업 표시하지 않음
                        } else {
                            localStorage.removeItem(doNotShowKey);
                        }
                    }
                    
                    // 팝업 HTML 생성
                    const popupHTML = `
                        <div id="popup-${popup.id}" class="popup">
                            <div class="popup-content">
                                <button class="close-popup" onclick="closePopup(${popup.id})">×</button>
                                ${popup.link ? 
                                    `<a href="${popup.link}" onclick="closePopup(${popup.id})">
                                        <img src="${popup.image}" alt="${popup.name}" class="popup-image">
                                    </a>` :
                                    `<img src="${popup.image}" alt="${popup.name}" class="popup-image">`
                                }
                                <div class="popup-footer">
                                    <button class="popup-button-left" onclick="setDoNotShowToday(${popup.id})">1일 동안 보지 않기</button>
                                    <button class="popup-button-right" onclick="closePopup(${popup.id})">닫기</button>
                                </div>
                            </div>
                        </div>
                    `;
                    
                    popupContainer.insertAdjacentHTML('beforeend', popupHTML);
                    
                    // 팝업 표시 (순차적으로 표시)
                    setTimeout(() => {
                        showPopup(popup.id);
                    }, index * 500);
                });
            }
        } catch (error) {
            console.error('팝업 로드 오류:', error);
        }
    }

    // 사이트 설정 로드 및 적용
    async function loadSiteSettings() {
        try {
            const response = await fetch('/api/settings');
            const result = await response.json();
            
            if (result.success) {
                const settings = result.data;
                
                // Footer 연락처 정보 업데이트
                if (settings.address) {
                    document.getElementById('footer-address').textContent = settings.address;
                }
                if (settings.contactEmail) {
                    document.getElementById('footer-email').textContent = settings.contactEmail;
                }
                if (settings.contactPhone) {
                    document.getElementById('footer-phone').textContent = settings.contactPhone;
                }
            }
        } catch (error) {
            console.error('사이트 설정 로드 오류:', error);
        }
    }

    // 팝업 표시 함수
    function showPopup(popupId) {
        const popup = document.getElementById(`popup-${popupId}`);
        if (popup) {
            popup.style.display = 'flex';
            setTimeout(() => {
                popup.style.opacity = '1';
            }, 10);
        }
    }

    // 팝업 닫기 함수
    function closePopup(popupId) {
        const popup = document.getElementById(`popup-${popupId}`);
        if (popup) {
            popup.style.opacity = '0';
            setTimeout(() => {
                popup.style.display = 'none';
            }, 500);
        }
    }

    // 하루 동안 보지 않기 함수
    function setDoNotShowToday(popupId) {
        const tomorrow = new Date();
        tomorrow.setDate(tomorrow.getDate() + 1);
        tomorrow.setHours(0, 0, 0, 0);
        
        localStorage.setItem(`popup_${popupId}_hide`, tomorrow.toISOString());
        closePopup(popupId);
    }

    // 페이지 로드 시 팝업 표시
    document.addEventListener('DOMContentLoaded', function() {
        // 사이트 설정 로드
        loadSiteSettings();
        
        // 푸터 설정 로드
        loadFooterSettings();
        
        // 약간의 지연 후 팝업 로드 (페이지 로딩 완료 후)
        setTimeout(loadAndShowPopups, 1000);
    });

    // 푸터 설정 로드 함수
    function loadFooterSettings() {
        fetch('/api/admin/settings')
            .then(response => response.json())
            .then(result => {
                if (result.success && result.data) {
                    const settings = result.data;
                    
                    // 푸터 설명 업데이트
                    if (settings.footerDescription) {
                        document.getElementById('footer-description-text').textContent = settings.footerDescription;
                    }
                    
                    // 연락처 정보 업데이트
                    if (settings.address) {
                        document.getElementById('footer-address').textContent = settings.address;
                    }
                    if (settings.contactEmail) {
                        document.getElementById('footer-email').textContent = settings.contactEmail;
                    }
                    if (settings.contactPhone) {
                        document.getElementById('footer-phone').textContent = settings.contactPhone;
                    }
                    if (settings.faxNumber) {
                        document.getElementById('footer-fax').textContent = settings.faxNumber;
                    }
                    
                    // 저작권 정보 업데이트
                    if (settings.footerCopyright) {
                        const copyrightText = document.getElementById('footer-copyright-text');
                        let fullText = '';
                        
                        if (settings.representativeName) {
                            fullText += `대표자: ${settings.representativeName} | `;
                        }
                        if (settings.businessNumber) {
                            fullText += `사업자등록번호: ${settings.businessNumber} | `;
                        }
                        fullText += settings.footerCopyright;
                        
                        copyrightText.textContent = fullText;
                    }
                    
                    console.log('✅ 푸터 설정 로드 완료');
                }
            })
            .catch(error => {
                console.error('푸터 설정 로드 오류:', error);
            });
    }
</script>

