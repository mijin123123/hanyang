    <!-- 푸터 설정 로드 스크립트 -->
    <script>
    function loadFooterSettings() {
        fetch('/api/admin/settings')
            .then(response => response.json())
            .then(data => {
                console.log('📥 설정 데이터:', data);
                
                if (data.success && data.data) {
                    const settings = data.data;
                    
                    // 푸터 정보 업데이트
                    if (settings.footerDescription) {
                        const descElement = document.getElementById('footer-description');
                        if (descElement) descElement.textContent = settings.footerDescription;
                    }
                    
                    if (settings.contactPhone) {
                        const phoneElement = document.getElementById('footer-phone');
                        if (phoneElement) phoneElement.textContent = settings.contactPhone;
                    }
                    
                    if (settings.address) {
                        const addressElement = document.getElementById('footer-address');
                        if (addressElement) addressElement.textContent = settings.address;
                    }
                    
                    if (settings.contactEmail) {
                        const emailElement = document.getElementById('footer-email');
                        if (emailElement) emailElement.textContent = settings.contactEmail;
                    }
                    
                    if (settings.faxNumber) {
                        const faxElement = document.getElementById('footer-fax');
                        if (faxElement) faxElement.textContent = settings.faxNumber;
                    }
                    
                    if (settings.representativeName) {
                        const repElement = document.getElementById('footer-representative');
                        if (repElement) repElement.textContent = `대표자: ${settings.representativeName}`;
                    }
                    
                    if (settings.businessNumber) {
                        const businessElement = document.getElementById('footer-business-number');
                        if (businessElement) businessElement.textContent = `사업자등록번호: ${settings.businessNumber}`;
                    }
                    
                    if (settings.footerCopyright) {
                        const copyrightElement = document.getElementById('footer-copyright');
                        if (copyrightElement) copyrightElement.textContent = settings.footerCopyright;
                    }
                }
            })
            .catch(error => {
                console.error('푸터 설정 로드 오류:', error);
            });
    }

    // 페이지 로드 시 푸터 설정 로드
    document.addEventListener('DOMContentLoaded', function() {
        loadFooterSettings();
    });
    </script>
    
