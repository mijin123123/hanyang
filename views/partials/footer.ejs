        function getCurrentUser() {
            return window.currentUser;
        }
        
        function isLoggedIn() {
            return window.currentUser !== null;
        }
        
        // 서버 기반 로그아웃
        function logout() {
            if (confirm('로그아웃 하시겠습니까?')) {
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = '/logout';
                document.body.appendChild(form);
                form.submit();
            }
        }
