    <script>
        let inquiryData = [];

        // 문의 목록 로드
        async function loadInquiries() {
            try {
                console.log('📋 문의 목록 로딩 시작');
                
                const response = await fetch('/api/my-inquiries');
                const result = await response.json();
                
                if (!response.ok) {
                    throw new Error(result.message || '문의 목록을 불러올 수 없습니다.');
                }
                
                inquiryData = result.inquiries;
                console.log(`✅ 문의 목록 로드 완료: ${inquiryData.length}건`);
                
                renderInquiries();
                
            } catch (error) {
                console.error('❌ 문의 목록 로드 실패:', error);
                showError('문의 목록을 불러오는 중 오류가 발생했습니다.');
            }
        }
        
        // 문의 목록 렌더링
        function renderInquiries() {
            const inquiryList = document.getElementById('inquiryList');
            const loadingState = document.getElementById('loadingState');
            const noInquiries = document.getElementById('noInquiries');
            
            // 로딩 상태 숨기기
            loadingState.style.display = 'none';
            
            if (inquiryData.length === 0) {
                // 문의가 없는 경우
                noInquiries.style.display = 'block';
                return;
            }
            
            // 문의 목록 HTML 생성
            let html = '';
            inquiryData.forEach((inquiry, index) => {
                const statusClass = inquiry.status === 'replied' ? 'status-answered' : 
                                  inquiry.status === 'completed' ? 'status-completed' : 'status-waiting';
                const statusText = inquiry.status === 'replied' ? '답변완료' : 
                                 inquiry.status === 'completed' ? '처리완료' : '답변대기';
                
                // 내용 미리보기 (첫 100자)
                const preview = inquiry.content.length > 100 ? 
                              inquiry.content.substring(0, 100) + '...' : inquiry.content;
                
                html += `
                    <div class="inquiry-item">
                        <div class="inquiry-header" onclick="toggleInquiry('${inquiry.id}')">
                            <div class="inquiry-left">
                                <div class="inquiry-meta">
                                    <span class="inquiry-category">${inquiry.category}</span>
                                    <span class="inquiry-date">${inquiry.createdAt}</span>
                                    <span class="inquiry-status ${statusClass}">${statusText}</span>
                                </div>
                                <h3 class="inquiry-title">${escapeHtml(inquiry.title)}</h3>
                                <p class="inquiry-preview">${escapeHtml(preview)}</p>
                            </div>
                            <div class="inquiry-toggle" id="toggle-${inquiry.id}">
                                <i class="fas fa-chevron-down"></i>
                            </div>
                        </div>
                        <div class="inquiry-content" id="content-${inquiry.id}">
                            <div class="inquiry-message">
                                <div class="message-header">
                                    <div class="message-label">
                                        <i class="fas fa-user"></i> 문의 내용
                                    </div>
                                    <div class="message-date">${inquiry.createdAt} ${inquiry.createdTime}</div>
                                </div>
                                <div class="message-content">${escapeHtml(inquiry.content)}</div>
                            </div>
                            ${inquiry.adminReply ? `
                                <div class="inquiry-response">
                                    <div class="response-header">
                                        <div class="response-label">
                                            <i class="fas fa-headset"></i> 고객센터 답변
                                        </div>
                                        <div class="response-date">${inquiry.repliedAt} ${inquiry.repliedTime}</div>
                                    </div>
                                    <div class="response-content">${escapeHtml(inquiry.adminReply)}</div>
                                </div>
                            ` : ''}
                        </div>
                    </div>
                `;
            });
            
            inquiryList.innerHTML = html;
        }
        
        // HTML 이스케이프 함수
        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML.replace(/\n/g, '<br>');
        }
        
        // 에러 표시
        function showError(message) {
            const inquiryList = document.getElementById('inquiryList');
            const loadingState = document.getElementById('loadingState');
            
            loadingState.style.display = 'none';
            
            inquiryList.innerHTML = `
                <div style="text-align: center; padding: 60px 20px; background-color: var(--white); border-radius: var(--border-radius); box-shadow: var(--box-shadow);">
                    <i class="fas fa-exclamation-triangle" style="font-size: 3rem; color: var(--danger); margin-bottom: 20px;"></i>
                    <h3 style="color: var(--dark); margin-bottom: 10px;">오류가 발생했습니다</h3>
                    <p style="color: var(--gray); margin-bottom: 30px;">${message}</p>
                    <button onclick="loadInquiries()" style="background-color: var(--primary); color: var(--white); padding: 12px 30px; border: none; border-radius: 50px; cursor: pointer; font-weight: 600;">
                        <i class="fas fa-redo"></i> 다시 시도
                    </button>
                </div>
            `;
        }

        // 문의 토글 기능
        function toggleInquiry(id) {
            const content = document.getElementById(`content-${id}`);
            const toggle = document.getElementById(`toggle-${id}`);
            const icon = toggle.querySelector('i');
            
            if (content.classList.contains('active')) {
                content.classList.remove('active');
                toggle.classList.remove('active');
                icon.classList.remove('fa-chevron-up');
                icon.classList.add('fa-chevron-down');
            } else {
                // 모든 문의 닫기
                document.querySelectorAll('.inquiry-content').forEach(item => {
                    item.classList.remove('active');
                });
                document.querySelectorAll('.inquiry-toggle').forEach(item => {
                    item.classList.remove('active');
                    const toggleIcon = item.querySelector('i');
                    toggleIcon.classList.remove('fa-chevron-up');
                    toggleIcon.classList.add('fa-chevron-down');
                });

                // 현재 문의 열기
                content.classList.add('active');
                toggle.classList.add('active');
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-up');
            }
        }

        // 페이지 로드 시 실행
        document.addEventListener('DOMContentLoaded', function() {
            loadInquiries();
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            updateHeaderUserInfo();
        });
    </script>
</body>
