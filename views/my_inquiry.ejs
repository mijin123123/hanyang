    <style>
        :root {
            --primary: #4361ee;
            --primary-light: #eef2ff;
            --secondary: #3f37c9;
            --danger: #f72585;
            --success: #198754;
            --warning: #ffc107;
            --dark: #212529;
            --gray: #6c757d;
            --light: #f8f9fa;
            --white: #ffffff;
            --border-radius: 12px;
            --box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
            --transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        body {
            background-color: #f5f7ff;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto 0;
            padding: 0 20px;
            flex: 1;
            width: 100%;
        }

        .customer-service {
            width: 100%;
            margin-bottom: 40px;
            background: linear-gradient(135deg, var(--primary) 0%, var(--secondary) 100%);
            border-radius: var(--border-radius);
            padding: 30px;
            color: var(--white);
            display: flex;
            justify-content: space-between;
            align-items: center;
            box-shadow: var(--box-shadow);
        }

        .service-info {
            flex: 1;
        }

        .service-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 12px;
        }

        .service-subtitle {
            font-size: 1rem;
            opacity: 0.9;
            margin-bottom: 20px;
        }

        .service-image {
            width: 180px;
            height: 180px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .service-image img {
            max-width: 100%;
            max-height: 100%;
            filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.2));
        }

        .page-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 30px;
            text-align: center;
            color: var(--dark);
            position: relative;
            padding-bottom: 15px;
        }

        .page-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(90deg, var(--primary), var(--danger));
            border-radius: 2px;
        }

        .inquiry-actions {
            display: flex;
            justify-content: flex-end;
            margin-bottom: 20px;
            gap: 15px;
        }

        .action-btn {
            border: none;
            padding: 12px 24px;
            border-radius: 50px;
            font-weight: 600;
            cursor: pointer;
            transition: var(--transition);
            display: flex;
            align-items: center;
            gap: 8px;
            text-decoration: none;
            font-size: 1rem;
        }

        .new-inquiry-btn {
            background-color: var(--danger);
            color: var(--white);
            box-shadow: 0 4px 12px rgba(247, 37, 133, 0.3);
        }

        .new-inquiry-btn:hover {
            background-color: #e61a6b;
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(247, 37, 133, 0.4);
        }

        .inquiry-list {
            width: 100%;
            margin-bottom: 40px;
        }

        .inquiry-item {
            background-color: var(--white);
            border-radius: var(--border-radius);
            margin-bottom: 20px;
            box-shadow: var(--box-shadow);
            overflow: hidden;
            transition: var(--transition);
        }

        .inquiry-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
        }

        .inquiry-header {
            padding: 20px 24px;
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            cursor: pointer;
            background-color: var(--white);
            border-bottom: 1px solid #f0f0f0;
        }

        .inquiry-left {
            flex: 1;
            display: flex;
            flex-direction: column;
            gap: 8px;
        }

        .inquiry-meta {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 8px;
        }

        .inquiry-category {
            background-color: var(--primary);
            color: var(--white);
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .inquiry-date {
            font-size: 0.85rem;
            color: var(--gray);
        }

        .inquiry-status {
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.8rem;
            font-weight: 600;
        }

        .status-waiting {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-answered {
            background-color: #d1ecf1;
            color: #0c5460;
        }

        .status-completed {
            background-color: #d4edda;
            color: #155724;
        }

        .inquiry-title {
            font-weight: 600;
            color: var(--dark);
            font-size: 1.1rem;
            margin-bottom: 5px;
        }

        .inquiry-preview {
            color: var(--gray);
            font-size: 0.9rem;
            line-height: 1.4;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
        }

        .inquiry-toggle {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--light);
            color: var(--gray);
            transition: var(--transition);
        }

        .inquiry-toggle:hover {
            background-color: var(--primary-light);
            color: var(--primary);
        }

        .inquiry-toggle.active {
            background-color: var(--primary);
            color: var(--white);
            transform: rotate(180deg);
        }

        .inquiry-content {
            display: none;
            padding: 24px;
            background-color: #fafbfc;
        }

        .inquiry-content.active {
            display: block;
        }

        .inquiry-message {
            background-color: var(--white);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            border-left: 4px solid var(--primary);
        }

        .message-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 15px;
        }

        .message-label {
            font-weight: 600;
            color: var(--primary);
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .message-date {
