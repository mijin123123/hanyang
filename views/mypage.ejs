    <script src="js/auth.js"></script>
    <script src="js/header.js"></script>
    <script>
        // 페이지 로드 시 실행
        document.addEventListener('DOMContentLoaded', async function() {
            // 서버 세션과 동기화
            await checkServerSession();
            
            // 로그인 체크
            if (!requireLogin()) {
                return;
            }

            // 사용자 정보 로드
            loadUserProfile();
            
            // 프로필 업데이트 폼 이벤트
            document.getElementById('profileForm').addEventListener('submit', updateProfile);
            
            // 헤더 메뉴 이벤트 리스너
            initializeHeaderEvents();
        });

        // 서버 세션 상태 확인 함수
        async function checkServerSession() {
            try {
                const response = await fetch('/api/check-session', {
                    method: 'GET',
                    credentials: 'include'
                });
                
                if (response.ok) {
                    const result = await response.json();
                    
                    if (result.user) {
                        // 서버에 세션이 있으면 localStorage 업데이트
                        localStorage.setItem('currentUser', JSON.stringify(result.user));
                        const expiryTime = new Date().getTime() + (24 * 60 * 60 * 1000);
                        localStorage.setItem('sessionExpiry', expiryTime.toString());
                        console.log('서버 세션 동기화 완료:', result.user);
                    } else {
                        // 서버에 세션이 없으면 localStorage 정리
                        const localUser = localStorage.getItem('currentUser');
                        if (localUser) {
                            console.log('서버 세션이 없어서 localStorage 정리');
                            localStorage.removeItem('currentUser');
                            localStorage.removeItem('sessionExpiry');
                            window.location.href = '/login';
                        }
                    }
                }
            } catch (error) {
                console.log('서버 세션 확인 중 오류:', error);
            }
        }

        // 사용자 프로필 정보 로드
        function loadUserProfile() {
            const user = getCurrentUser();
            if (!user) return;

            // 환영 메시지가 서버에서 표시되지 않은 경우에만 업데이트
            const welcomeElement = document.getElementById('welcomeUserName');
            if (welcomeElement && !welcomeElement.textContent) {
                welcomeElement.textContent = user.name;
            }

            // 기본 정보 폼 채우기 (서버에서 설정되지 않은 경우에만)
            const nameInput = document.getElementById('name');
            const usernameInput = document.getElementById('username');
            
            if (!nameInput.value) {
                nameInput.value = user.name;
            }
            if (!usernameInput.value) {
                usernameInput.value = user.username;
            }

            // 샘플 데이터로 나머지 정보 채우기 (실제로는 서버에서 가져와야 함)
            fillSampleData(user);
        }

        // 샘플 데이터 채우기 (서버에서 설정되지 않은 경우에만)
        function fillSampleData(user) {
            // 통계 데이터는 서버에서 이미 설정되므로 JavaScript에서는 건드리지 않음
            
            // 입력 필드들도 서버에서 설정된 값이 있으면 덮어쓰지 않음
            const phoneInput = document.getElementById('phone');
            const bankNameInput = document.getElementById('bankName');
            const accountNumberInput = document.getElementById('accountNumber');
            const addressInput = document.getElementById('address');
            const detailAddressInput = document.getElementById('detailAddress');
            
            // 서버에서 값이 설정되지 않은 경우에만 기본값 설정
            if (!phoneInput.value && user.username === 'minj0010') {
                phoneInput.value = '010-3234-1123';
            }
            if (!bankNameInput.value && user.username === 'minj0010') {
                bankNameInput.value = 'KB국민은행';
            }
            if (!accountNumberInput.value && user.username === 'minj0010') {
                accountNumberInput.value = '94401139100103';
            }
            if (!addressInput.value && user.username === 'minj0010') {
                addressInput.value = '서울 강남구 도산대로 104 (논현동)';
            }
            if (!detailAddressInput.value && user.username === 'minj0010') {
                detailAddressInput.value = '원경빌301';
            }
        }

        // 계좌/주소 정보 업데이트
        function updateAccountInfo() {
            const bankName = document.getElementById('bankName').value.trim();
            const accountNumber = document.getElementById('accountNumber').value.trim();
            const address = document.getElementById('address').value.trim();
            const detailAddress = document.getElementById('detailAddress').value.trim();

            if (!bankName) {
                showPopup('은행명을 입력해주세요.');
                return;
            }

            if (!accountNumber) {
                showPopup('계좌번호를 입력해주세요.');
                return;
            }

            // 계좌번호 형식 검증 (숫자와 하이픈만 허용)
            const accountRegex = /^[0-9-]+$/;
            if (!accountRegex.test(accountNumber)) {
                showPopup('계좌번호는 숫자와 하이픈(-)만 입력 가능합니다.');
                return;
            }

            // 서버로 정보 전송
            fetch('/api/update-account-info', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                credentials: 'include',
                body: JSON.stringify({
                    bankName: bankName,
                    accountNumber: accountNumber,
                    address: address,
                    detailAddress: detailAddress
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showPopup('계좌/주소 정보가 성공적으로 저장되었습니다.');
                } else {
                    showPopup(data.message || '정보 저장 중 오류가 발생했습니다.');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showPopup('정보 저장 중 오류가 발생했습니다.');
            });
        }

        // 프로필 업데이트
        function updateProfile(event) {
            event.preventDefault();
            
            const password = document.getElementById('password').value;
            const confirmPassword = document.getElementById('confirmPassword').value;
            const phone = document.getElementById('phone').value;

            // 비밀번호 검증
            if (password) {
                if (password.length < 8) {
                    showPopup('비밀번호는 8자 이상이어야 합니다.');
                    return;
                }
                
                if (password !== confirmPassword) {
                    showPopup('비밀번호 확인이 일치하지 않습니다.');
                    return;
                }
            }

            // 전화번호 검증
            if (phone) {
                const phoneRegex = /^010-\d{4}-\d{4}$/;
                if (!phoneRegex.test(phone)) {
                    showPopup('전화번호 형식이 올바르지 않습니다. (예: 010-1234-5678)');
                    return;
                }
            }

            // 업데이트 성공 메시지
            showPopup('프로필이 성공적으로 업데이트되었습니다.');
            
            // 비밀번호 필드 초기화
            document.getElementById('password').value = '';
            document.getElementById('confirmPassword').value = '';
        }

        // 팝업 표시
        function showPopup(message) {
            document.getElementById('popupContent').textContent = message;
            document.getElementById('popupOverlay').classList.add('active');
        }

        // 팝업 닫기
        function closePopup() {
            document.getElementById('popupOverlay').classList.remove('active');
        }

        // 고객센터 채팅 열기
        function openChat() {
            if (typeof ChannelIO !== 'undefined') {
                ChannelIO('openChat');
            } else {
                alert('고객센터 채팅을 준비 중입니다. 잠시 후 다시 시도해주세요.');
            }
        }

        // 헤더 이벤트 초기화
        function initializeHeaderEvents() {
            // 모바일 메뉴 토글
            const mobileToggle = document.querySelector('.hy-mobile-toggle');
            const mobileMenu = document.querySelector('.hy-mobile-menu');
            const mobileClose = document.querySelector('.hy-mobile-close');
            
            if (mobileToggle) {
                mobileToggle.addEventListener('click', function() {
                    mobileMenu.classList.add('hy-show');
                    document.body.style.overflow = 'hidden';
                });
            }
            
            if (mobileClose) {
                mobileClose.addEventListener('click', function() {
                    mobileMenu.classList.remove('hy-show');
                    document.body.style.overflow = '';
                });
            }

            // 모바일 서브메뉴 토글
            const mobileMenuBtns = document.querySelectorAll('.hy-mobile-menu-btn');
            mobileMenuBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const submenu = this.nextElementSibling;
                    const isOpen = submenu.style.maxHeight;
                    
                    // 모든 서브메뉴 닫기
                    document.querySelectorAll('.hy-mobile-submenu').forEach(menu => {
                        if (menu !== submenu) {
                            menu.style.maxHeight = null;
                            menu.previousElementSibling.classList.remove('hy-open');
                        }
                    });
                    
                    // 현재 서브메뉴 토글
                    if (isOpen) {
                        submenu.style.maxHeight = null;
                        this.classList.remove('hy-open');
                    } else {
                        submenu.style.maxHeight = submenu.scrollHeight + 'px';
                        this.classList.add('hy-open');
                    }
                });
            });

            // 데스크탑 드롭다운
            const desktopItems = document.querySelectorAll('.hy-has-dropdown');
            desktopItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    const submenu = this.querySelector('.hy-submenu');
                    if (submenu) {
                        submenu.style.display = 'block';
                    }
                });
                
                item.addEventListener('mouseleave', function() {
                    const submenu = this.querySelector('.hy-submenu');
                    if (submenu) {
                        submenu.style.display = 'none';
                    }
                });
            });
        }
    </script>

