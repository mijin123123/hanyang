        .hy-auth-area .hy-logout-btn:hover,
        .hy-auth-area .hy-user-info a:hover,
        .hy-auth-area a:hover,
        .hy-auth-area button:hover {
            background: none !important;
            background-color: transparent !important;
            color: #E67E22 !important;
            transform: none !important;
            box-shadow: none !important;
            border: none !important;
        }

        /* 반응형 디자인 */
        @media (max-width: 768px) {
            .page-header h1 {
                font-size: 1.8rem;
            }
            
            .stats-container {
                grid-template-columns: repeat(2, 1fr);
                gap: 12px;
            }
            
            .stat-card {
                padding: 15px;
            }
            
            .stat-icon {
                font-size: 1.8rem;
            }
            
            .stat-value {
                font-size: 1.3rem;
            }
            
            .stat-title {
                font-size: 0.9rem;
            }
        }

        @media (max-width: 576px) {
            .stats-container {
                grid-template-columns: 1fr;
                gap: 10px;
            }
            
            .container {
                padding: 15px;
            }
            
            .profile-section {
                padding: 20px;
            }
        }

    </style>
</head>
