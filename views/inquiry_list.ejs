            border-radius: var(--border-radius);
            padding: 30px;
            margin-bottom: 30px;
        }

        .guide-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .guide-list {
            list-style: none;
            padding: 0;
        }

        .guide-list li {
            margin-bottom: 12px;
            display: flex;
            align-items: flex-start;
            gap: 12px;
            color: var(--dark);
            line-height: 1.6;
        }

        .guide-list li::before {
            content: '✓';
            color: var(--primary);
            font-weight: bold;
            font-size: 1.1rem;
            margin-top: 2px;
        }

        .file-upload-area {
