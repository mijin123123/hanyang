<script>
function showPurchaseModal() {
    const modal = document.getElementById('purchaseModal');
    const modalMessage = document.getElementById('modalMessage');
    const confirmBtn = document.getElementById('confirmPurchase');
    const cancelBtn = document.getElementById('cancelPurchase');
    
    const productName = "[100KW] 다함께 동행 베이직";
    const amount = "3,000,000";
    const profitRate = "0.05";
    const duration = "365";
    
    modalMessage.innerHTML = `
        <div style="text-align: center; margin-bottom: 20px;">
            <div style="background: linear-gradient(135deg, var(--primary-color), var(--secondary-color)); color: white; padding: 15px; border-radius: 10px; margin-bottom: 20px;">
                <h4 style="margin: 0; font-size: 18px; font-weight: 600;">${productName}</h4>
                <p style="margin: 5px 0 0 0; font-size: 14px; opacity: 0.9;">투자 상품에 신청하시겠습니까?</p>
            </div>
            
            <div style="background: #f8f9fa; padding: 20px; border-radius: 12px; border: 1px solid #e9ecef;">
                <div style="display: grid; gap: 12px;">
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #dee2e6;">
                        <span style="color: #6c757d; font-weight: 500;">💰 투자 금액</span>
                        <span style="font-weight: 700; color: var(--primary-color); font-size: 16px;">₩${amount.replace(/\B(?=(\d{3})+(?!\d))/g, ',')}</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #dee2e6;">
                        <span style="color: #6c757d; font-weight: 500;">📅 투자 기간</span>
                        <span style="font-weight: 600; color: #495057;">${duration}일</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 8px 0; border-bottom: 1px solid #dee2e6;">
                        <span style="color: #6c757d; font-weight: 500;">📈 일일 수익률</span>
                        <span style="font-weight: 700; color: var(--success-color); font-size: 16px;">${profitRate}%</span>
                    </div>
                    <div style="display: flex; justify-content: space-between; align-items: center; padding: 8px 0;">
                        <span style="color: #6c757d; font-weight: 500;">💵 예상 일일 수익</span>
                        <span style="font-weight: 600; color: var(--warning-color);">약 1,500원</span>
                    </div>
                </div>
            </div>
            
            <div style="background: #fff3cd; border: 1px solid #ffeaa7; border-radius: 8px; padding: 12px; margin-top: 15px;">
                <p style="margin: 0; font-size: 13px; color: #856404; line-height: 1.4;">
                    <i class="fas fa-info-circle" style="margin-right: 5px;"></i>
                    투자 신청 후 담당자 검토를 거쳐 최종 승인됩니다.
                </p>
            </div>
        </div>
    `;
    
    modal.style.display = 'flex';
    
    confirmBtn.onclick = function() {
        modal.style.display = 'none';
        
        // 성공 메시지 모달 표시
        const successModal = document.createElement('div');
        successModal.style.cssText = `
            position: fixed; top: 0; left: 0; width: 100%; height: 100%;
            background-color: rgba(0,0,0,0.7); z-index: 1001;
            display: flex; justify-content: center; align-items: center;
        `;
        
        successModal.innerHTML = `
            <div style="background: white; padding: 30px; border-radius: 12px; max-width: 400px; width: 90%; text-align: center; animation: modalFadeIn 0.3s ease;">
                <div style="color: var(--success-color); font-size: 48px; margin-bottom: 15px;">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h3 style="color: var(--success-color); margin-bottom: 15px; font-size: 20px;">투자 신청 완료!</h3>
                <p style="margin-bottom: 20px; line-height: 1.6; color: #495057;">
                    투자 신청이 성공적으로 접수되었습니다.<br>
                    담당자가 검토 후 빠른 시일 내에 연락드리겠습니다.
                </p>
                <button onclick="this.closest('div').remove()" style="
                    background: var(--success-color); color: white; border: none;
                    padding: 12px 24px; border-radius: 8px; font-weight: 600;
                    cursor: pointer; transition: all 0.3s ease;
                ">확인</button>
            </div>
        `;
        
        document.body.appendChild(successModal);
        
        // 3초 후 자동 제거
        setTimeout(() => {
            if (successModal.parentNode) {
                successModal.remove();
            }
        }, 3000);
    };
    
    cancelBtn.onclick = function() {
        modal.style.display = 'none';
    };
    
    // 모달 외부 클릭 시 닫기
    modal.onclick = function(e) {
        if (e.target === modal) {
            modal.style.display = 'none';
        }
    };
}
</script>

